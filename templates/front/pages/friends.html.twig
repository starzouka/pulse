{% extends 'base.html.twig' %}

{% block title %}PULSE - Amis{% endblock %}

{% block body %}
  {% include 'front/partials/_hero_mini.html.twig' with {
    hero_kicker: 'JOUEUR',
    hero_title: 'Amis',
    hero_sub: 'Gestion des relations comme une page sociale classique.',
    breadcrumb_current: 'Amis'
  } %}

  <main class="page">
    <section class="belowHero">
      <div class="layout">
        {% include 'front/partials/_player_side_nav.html.twig' with { active: 'friends' } %}

        <div class="socialShell">
          <div class="socialStack">
            <section class="panel">
              <div class="tabs" data-tabs="friends-tabs">
                <button class="tab is-active" data-tab="my-friends">Mes amis</button>
                <button class="tab" data-tab="received">Demandes recues</button>
                <button class="tab" data-tab="sent">Demandes envoyees</button>
              </div>

              <div class="tabPanels" data-panels="friends-tabs">
                <section class="tabPanel is-active" data-panel="my-friends">
                  <div class="socialQuickList">
                    <article class="listItem"><span>NovaAim</span><span class="listItem__meta">US · En ligne</span></article>
                    <article class="listItem"><span>FrostByte</span><span class="listItem__meta">FR · Actif</span></article>
                    <article class="listItem"><span>Kairo</span><span class="listItem__meta">TN · En ligne</span></article>
                  </div>
                </section>

                <section class="tabPanel" data-panel="received">
                  <div class="socialQuickList">
                    <article class="listItem"><span>ZenithPro</span><span class="badge">PENDING</span></article>
                    <article class="listItem"><span>MiraShot</span><span class="badge">PENDING</span></article>
                  </div>
                  <div class="postCard__actions" style="margin-top:10px;">
                    <button class="btn btn--primary" type="button">Accepter</button>
                    <button class="btn btn--ghost" type="button">Refuser</button>
                  </div>
                </section>

                <section class="tabPanel" data-panel="sent">
                  <div class="socialQuickList">
                    <article class="listItem"><span>ShadowArc</span><span class="badge">PENDING</span></article>
                    <article class="listItem"><span>VoltAim</span><span class="badge badge--danger">REFUSED</span></article>
                  </div>
                </section>
              </div>
            </section>
          </div>

          <aside class="socialStack">
            <section class="panel">
              <h3 class="panel__title">SUGGESTIONS</h3>
              <div class="socialQuickList">
                <a class="listItem" href="{{ path('front_players') }}"><span>Joueurs de votre region</span><span class="listItem__meta">22</span></a>
                <a class="listItem" href="{{ path('front_players') }}"><span>Capitaines actifs</span><span class="listItem__meta">7</span></a>
              </div>
            </section>

            <section class="panel">
              <h3 class="panel__title">RACCOURCIS</h3>
              <div class="socialQuickList">
                <a class="listItem" href="{{ path('front_messages') }}"><span>Ouvrir messagerie</span><span class="listItem__meta">Direct</span></a>
                <a class="listItem" href="{{ path('front_players') }}"><span>Rechercher joueurs</span><span class="listItem__meta">Explorer</span></a>
              </div>
            </section>
          </aside>
        </div>
      </div>

      {% include 'front/partials/_footer.html.twig' %}
    </section>
  </main>

  {% include 'front/partials/_auth_modal.html.twig' %}
{% endblock %}
