{% extends 'base.html.twig' %}

{% block title %}PULSE - Mes commandes{% endblock %}

{% block body %}
  {% include 'front/partials/_hero_mini.html.twig' with {
    hero_kicker: 'JOUEUR',
    hero_title: 'Mes commandes',
    hero_sub: 'Historique, statuts et acces detail commande.',
    breadcrumb_current: 'Mes commandes'
  } %}

  <main class="page">
    <section class="belowHero">
      <div class="layout">
        {% include 'front/partials/_player_side_nav.html.twig' with { active: 'orders' } %}

        <div class="socialShell">
          <div class="socialStack">
            <section class="panel">
              <div class="filtersRow">
                <div class="select">
                  <select>
                    <option>Tous statuts</option>
                    <option>PENDING</option>
                    <option>PAID</option>
                    <option>SHIPPED</option>
                    <option>DELIVERED</option>
                  </select>
                </div>
                <input class="input" type="date" />
                <button class="btn btn--ghost" type="button">Filtrer</button>
              </div>
            </section>

            <section class="panel">
              <div class="tableWrap">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Commande</th>
                      <th>Date</th>
                      <th>Total</th>
                      <th>Statut</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>ORD-2026-001</td>
                      <td>02/02/2026</td>
                      <td>167 DT</td>
                      <td><span class="badge badge--success">PAID</span></td>
                      <td><a class="btn btn--ghost" href="{{ path('front_order_detail') }}">Detail</a></td>
                    </tr>
                    <tr>
                      <td>ORD-2026-002</td>
                      <td>05/02/2026</td>
                      <td>39 DT</td>
                      <td><span class="badge">PENDING</span></td>
                      <td><a class="btn btn--ghost" href="{{ path('front_order_detail') }}">Detail</a></td>
                    </tr>
                    <tr>
                      <td>ORD-2026-003</td>
                      <td>09/02/2026</td>
                      <td>210 DT</td>
                      <td><span class="badge badge--warning">SHIPPED</span></td>
                      <td><a class="btn btn--ghost" href="{{ path('front_order_detail') }}">Detail</a></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </section>
          </div>

          <aside class="socialStack">
            <section class="panel">
              <h3 class="panel__title">RESUME COMMANDES</h3>
              <div class="statsRow">
                <div class="statCard"><div class="statCard__value">3</div><div class="statCard__label">Totales</div></div>
                <div class="statCard"><div class="statCard__value">1</div><div class="statCard__label">En livraison</div></div>
                <div class="statCard"><div class="statCard__value">1</div><div class="statCard__label">En attente</div></div>
              </div>
            </section>

            <section class="panel">
              <h3 class="panel__title">RACCOURCIS</h3>
              <div class="socialQuickList">
                <a class="listItem" href="{{ path('front_cart') }}"><span>Ouvrir panier</span><span class="listItem__meta">2 articles</span></a>
                <a class="listItem" href="{{ path('front_shop') }}"><span>Retour boutique</span><span class="listItem__meta">Explorer</span></a>
              </div>
            </section>
          </aside>
        </div>
      </div>

      {% include 'front/partials/_footer.html.twig' %}
    </section>
  </main>

  {% include 'front/partials/_auth_modal.html.twig' %}
{% endblock %}
