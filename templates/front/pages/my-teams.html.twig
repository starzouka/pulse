{% extends 'base.html.twig' %}

{% block title %}PULSE - Mes equipes{% endblock %}

{% block body %}
  {% include 'front/partials/_hero_mini.html.twig' with {
    hero_kicker: 'JOUEUR',
    hero_title: 'Mes equipes',
    hero_sub: 'Vue sociale des equipes rejointes et des invitations.',
    breadcrumb_current: 'Mes equipes'
  } %}

  <main class="page">
    <section class="belowHero">
      <div class="layout">
        {% include 'front/partials/_player_side_nav.html.twig' with { active: 'my_teams' } %}

        <div class="socialShell">
          <div class="socialStack">
            <section class="panel">
              <div class="panel__head">
                <h3 class="panel__title">EQUIPES ACTIVES</h3>
                <a class="btn btn--ghost" href="{{ path('front_teams_explore') }}">Explorer</a>
              </div>

              <article class="panel">
                <div class="postCard__head">
                  <div class="postCard__author">
                    <div class="avatarMd" data-avatar="https://picsum.photos/seed/pulse_team_a/200/200"></div>
                    <div>
                      <div class="name">Nebula Five</div>
                      <div class="sub">Role: Membre · Region MENA</div>
                    </div>
                  </div>
                  <span class="badge badge--success">ACTIVE</span>
                </div>
                <div class="postCard__actions">
                  <a class="btn btn--ghost" href="{{ path('front_team_detail') }}">Voir equipe</a>
                  <button class="btn btn--ghost" type="button">Quitter</button>
                </div>
              </article>

              <article class="panel">
                <div class="postCard__head">
                  <div class="postCard__author">
                    <div class="avatarMd" data-avatar="https://picsum.photos/seed/pulse_team_b/200/200"></div>
                    <div>
                      <div class="name">Aurora Squad</div>
                      <div class="sub">Role: Membre · Region NA</div>
                    </div>
                  </div>
                  <span class="badge badge--success">ACTIVE</span>
                </div>
                <div class="postCard__actions">
                  <a class="btn btn--ghost" href="{{ path('front_team_detail') }}">Voir equipe</a>
                  <button class="btn btn--ghost" type="button">Quitter</button>
                </div>
              </article>
            </section>
          </div>

          <aside class="socialStack">
            <section class="panel">
              <h3 class="panel__title">INVITATIONS</h3>
              <div class="socialQuickList">
                <article class="listItem"><span>North Hydra</span><span class="badge">PENDING</span></article>
              </div>
              <div class="postCard__actions" style="margin-top:10px;">
                <button class="btn btn--primary" type="button">Accepter</button>
                <button class="btn btn--ghost" type="button">Refuser</button>
              </div>
            </section>

            <section class="panel">
              <h3 class="panel__title">RACCOURCIS</h3>
              <div class="socialQuickList">
                <a class="listItem" href="{{ path('front_my_requests') }}"><span>Mes demandes</span><span class="listItem__meta">Suivi</span></a>
                <a class="listItem" href="{{ path('front_tournaments') }}"><span>Tournois ouverts</span><span class="listItem__meta">7</span></a>
              </div>
            </section>
          </aside>
        </div>
      </div>

      {% include 'front/partials/_footer.html.twig' %}
    </section>
  </main>

  {% include 'front/partials/_auth_modal.html.twig' %}
{% endblock %}
