{% extends 'base.html.twig' %}

{% block title %}PULSE - Notifications{% endblock %}

{% block body %}
  {% include 'front/partials/_hero_mini.html.twig' with {
    hero_kicker: 'JOUEUR',
    hero_title: 'Notifications',
    hero_sub: 'Fil des alertes et evenements importants.',
    breadcrumb_current: 'Notifications'
  } %}

  <main class="page">
    <section class="belowHero">
      <div class="layout">
        {% include 'front/partials/_player_side_nav.html.twig' with { active: 'notifications' } %}

        <div class="socialShell">
          <div class="socialStack">
            <section class="panel">
              <div class="panel__head">
                <h3 class="panel__title">ALERTES</h3>
                <button class="btn btn--ghost" type="button">Tout marquer lu</button>
              </div>

              <div class="list">
                <article class="listItem"><span>Invitation equipe Aurora Squad</span><span class="badge">Nouveau</span></article>
                <article class="listItem"><span>Nouveau message de FrostByte</span><span class="listItem__meta">1h</span></article>
                <article class="listItem"><span>Commande ORD-2026-001 payee</span><span class="badge badge--success">PAID</span></article>
                <article class="listItem"><span>Tournoi Pulse Invitational: check-in demain</span><span class="badge badge--warning">Rappel</span></article>
              </div>
            </section>
          </div>

          <aside class="socialStack">
            <section class="panel">
              <h3 class="panel__title">FILTRES</h3>
              <div class="postCard__actions">
                <button class="btn btn--soft" type="button">Toutes</button>
                <button class="btn btn--ghost" type="button">Non lues</button>
                <button class="btn btn--ghost" type="button">Messages</button>
                <button class="btn btn--ghost" type="button">Tournois</button>
              </div>
            </section>

            <section class="panel">
              <h3 class="panel__title">PREFERENCES</h3>
              <div class="socialQuickList">
                <div class="listItem"><span>Email notifications</span><span class="listItem__meta">Active</span></div>
                <div class="listItem"><span>Push in-app</span><span class="listItem__meta">Active</span></div>
                <div class="listItem"><span>Commandes uniquement</span><span class="listItem__meta">Desactive</span></div>
              </div>
            </section>
          </aside>
        </div>
      </div>

      {% include 'front/partials/_footer.html.twig' %}
    </section>
  </main>

  {% include 'front/partials/_auth_modal.html.twig' %}
{% endblock %}
